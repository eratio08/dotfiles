{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "model": "github-copilo/claude-opus-4",
  "autoshare": false,
  "autoupdate": false,
  "keybinds": {
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "messages_previous": "ctrl+h",
    "messages_next": "ctrl+l"
  },
  "mcp": {
    "context7": {
      "enabled": true,
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "consult7": {
      "enabled": true,
      "type": "local",
      "command": [
        "uvx",
        "consult7",
        "google",
        "${env:GEMINI_API_KEY}"
      ]
    },
    "serena": {
      "enabled": true,
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--enable-web-dashboard",
        "false"
      ]
    },
    "browser": {
      "enabled": false,
      "type": "local",
      "command": [
        "npx",
        "@browsermcp/mcp@latest"
      ]
    },
    "playwright": {
      "enabled": false,
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ]
    },
    "awsdocs":{
      "enabled": false,
      "type": "local",
      "command": [
        "uvx",
        "awslabs.aws-documentation-mcp-server@latest"
      ]
    },
    "awsknowledge": {
      "enabled": false,
      "type": "remote",
      "url": "https://knowledge-mcp.global.api.aws"
    },
    "awscli": {
      "enabled": false,
      "type": "local",
      "command": [
        "uvx",
        "awslabs.aws-api-mcp-server@latest"
      ],
    },
    "awstf":{
      "enabled": false,
      "type": "local",
      "command": [
        "uvx",
        "awslabs.terraform-mcp-server@latest"
      ],
    },
    "awsdiagram":{
      "enabled": false,
      "type": "local",
      "command": [
        "uvx",
        "awslabs.aws-diagram-mcp-server"
      ],
    },
    "opentofu":{
      "enabled": false,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@opentofu/opentofu-mcp-server"
      ]
    } ,
    "semgrep":{
      "enabled": false,
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/semgrep/mcp",
        "semgrep-mcp",
      ]
    }
  }
}
